@model Lab5.Models.ViewModels.DealsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Fee
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.FoodDeliveryServices != null) {
        @foreach (var item in Model.FoodDeliveryServices) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-action="Deal" asp-route-id="@item.Id">Deals</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        }
    </tbody>
</table>

@if (Model.FoodDeliveryServices != null && Model.Subscriptions != null)
{
    <h2>Subscribers to the FoodDeliveryServices</h2>
    @foreach (var item in Model.Subscriptions)
    {
        @foreach (var item2 in Model.Customers)
        {
            if (item.CustomerId == item2.Id)
            {
                @Html.DisplayFor(modelItem => item2.FullName)
                <br>
            }
        }
    }
}
